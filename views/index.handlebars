<nav class="navbar navbar-expand-lg fixed-top navbarsettings navbar-dark">
    <a class="navbar-brand brand" href="/">Uncrate Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link active" href="/savedArticles">Saved Articles</a>
            <a class="nav-item nav-link active" href="/scrape">ScrapeIt!</a>
            <a class="nav-item nav-link active" href="/clearArticles">Clear</a>
        </div>
    </div>
</nav>
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4" id="title">Uncrate Scraper</h1>
    </div>
</div>
<div class="container" id="articles">
    <div class="row">
        <div class="col-md-12 appendArticles">
            {{#unless results}}
            <div class="row">
                <div class="col-lg-12">
                    <p style="text-align: center; font-size: 3vh;">No articles scraped, click <a href="/scrape">here</a>
                        to scrape new articles!</p>
                </div>
            </div>
            {{/unless}}
            {{#each results}}
            <div class="card my-3 article">
                <div class="card-body">
                    <h5 class="card-title summary">
                        <div class="row my-3">
                            <div class="col-lg-12">
                                <img id="articleImg" src="{{img}}" height="104px" width="156px"></img>
                                <a href="{{link}}">{{title}}</a>
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col-lg-12">
                                <p class="card-text summary">{{summary}}</p>
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col-lg-12">
                                <button data-id="{{_id}}" class="btn btn-primary saveIt" style="float: right">Save
                                    Article</button>
                            </div>
                        </div>
                    </h5>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
<script src="js/index.js"></script>